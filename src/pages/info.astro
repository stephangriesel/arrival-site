---
import Layout from "../layouts/Layout.astro";
import BottomNav from "../components/BottomNav";
import RulesAccordion from "../components/RulesAccordion";
import { Siren, Hotel } from "lucide-react";
---

<Layout title="Info - Arrival">
    <main class="relative w-full h-full overflow-y-auto bg-background pb-24">
        <div class="p-6 max-w-md mx-auto space-y-8">
            {/* Header */}
            <div class="mt-4 mb-2">
                <h1 class="text-3xl font-bold text-text tracking-tight">
                    Amsterdam <br /><span class="text-accent">Protocol</span>
                </h1>
                <p class="text-text/60 mt-2 text-sm">
                    Essential survival guide for runners.
                </p>
            </div>

            {/* Card 1: Emergency */}
            <div
                class="bg-red-500/10 border border-red-500/50 rounded-2xl p-6 relative overflow-hidden group"
            >
                <div
                    class="absolute top-0 right-0 p-4 opacity-20 group-hover:opacity-30 transition-opacity"
                >
                    <Siren className="w-24 h-24 text-red-500 rotate-12" />
                </div>

                <div class="relative z-10">
                    <h2 class="text-xl font-bold text-red-500 mb-1">
                        Emergency
                    </h2>
                    <p class="text-red-200/80 text-sm mb-6">
                        Immediate Police / Ambulance
                    </p>

                    <a
                        href="tel:112"
                        class="block w-full bg-red-600 hover:bg-red-500 text-white font-bold text-center py-4 rounded-xl shadow-lg shadow-red-900/20 transition-all active:scale-[0.98]"
                    >
                        Call 112
                    </a>
                </div>
            </div>

            {/* Card 2: The Rules */}
            <div>
                <h2
                    class="text-lg font-semibold text-text mb-4 flex items-center"
                >
                    <span class="w-1 h-6 bg-accent rounded-full mr-3"></span>
                    The Rules
                </h2>
                <RulesAccordion client:load />
            </div>

            {/* Card 3: Hotel Partners */}
            <div
                class="bg-gradient-to-br from-white/5 to-white/0 border border-white/10 rounded-2xl p-6 relative overflow-hidden"
            >
                <div class="flex items-start mb-4">
                    <div class="bg-accent/20 p-3 rounded-full mr-4">
                        <Hotel className="w-6 h-6 text-accent" />
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-text">
                            Partner Benefits
                        </h2>
                        <p
                            class="text-xs text-accent font-medium uppercase tracking-wider mt-1"
                        >
                            VIP Access
                        </p>
                    </div>
                </div>

                <p class="text-text/80 text-sm leading-relaxed">
                    Staying at <strong class="text-white">CitizenM</strong> or <strong
                        class="text-white">Crowne Plaza</strong
                    >? Scan your room code to unlock VIP running routes and
                    local perks.
                </p>

                <button
                    class="mt-4 w-full py-3 border border-white/20 rounded-lg text-sm text-text/60 hover:text-text hover:bg-white/5 transition-colors"
                >
                    Scan Room Code
                </button>
            </div>
        </div>
        <BottomNav client:load currentPath="/info" />
    </main>
</Layout>
